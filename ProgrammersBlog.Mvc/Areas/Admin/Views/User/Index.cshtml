@using ProgrammersBlog.Shared.Utilities.Results.ComplexTypes
@model ProgrammersBlog.Entities.Dtos.UserListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Kullanicilar Index";
}
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>

    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Kullanicilar
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Yukleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kullanici Adi</th>
                            <th>E-Posta Adresi</th>
                            <th>Telefon Numarasi</th>
                            <th>Resim</th>
                            <th>Islemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Kullanici Adi</th>
                            <th>E-Posta Adresi</th>
                            <th>Telefon Numarasi</th>
                            <th>Resim</th>
                            <th>Islemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr name="@item.Id">
                                <td>@item.Id</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td><img src="~/img/@item.Picture" alt="@item.UserName" class="my-image-table" /></td>
                                <td>
                                    <button class="btn btn-primary btn-sm btn-block btn-update" data-id="@item.Id"><span class="fas fa-edit"></span> Duzenle</button>
                                    <button class="btn btn-danger btn-sm btn-block btn-delete" data-id="@item.Id"><span class="fas fa-minus-circle"></span> Sil</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message<br />
        Dashboard sayfasina donmek icin lutfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">tiklayiniz.</a>
    </div>
}
@section Scripts{
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}